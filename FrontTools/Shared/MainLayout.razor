@inherits LayoutComponentBase

<MudThemeProvider Theme="TemaAtual" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        @*<MudText Typo="Typo.h6" Class="ml-3">Front Tools</MudText>*@
        <img src="./img/Logo/Logo.png" class="ml-3"/>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="3" Style="background-color: #ECEFF1;">
        <MenuLateral />
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="pt-2">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle() =>
        _drawerOpen = !_drawerOpen;

    protected override void OnInitialized() =>
        TemaAtual = defaultTheme;

    #region Theme

    MudTheme TemaAtual = new MudTheme();

    MudTheme defaultTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            AppbarBackground = "#0B1840",
            AppbarText = Colors.Shades.White,

            Tertiary = "#556773",
            Surface = "#BDBFAA"

        }
    };
    #endregion

}
